<div class="main-wrapper container">
  <div class="service-edit content">
    <h2>登録情報更新</h2>
    <%= render partial: 'shared/error', error: @error unless @error == nil %>
    <%= form_with model: @service, id: 'service-form',local: true do |f| %>
      <div class="field">
        <p>サービス名</p>
        <%= f.text_field :service_name %><br>
      </div>

      <div class="field">
        <p>説明文</p>
        <%= f.text_field :explanation %><br>
      </div>

      <div class="field">
        <p>料金（月額）</p>
        <p>¥<%= @service.price %></p>
      </div>

      <div class="field">
        <p>カテゴリー</p>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {} , {class:"category-select"}) %><br>
      </div>

      <div class="field">
        <p>画像</p>
        <%= f.file_field :images, name: 'service[images][]', id: 'service_image' %>
        <div id="image-list"></div>
      </div>

      <% @service.images.each do |image| %>
        <div class="field">
          <%= image_tag image, class: 'service-images' %>
        </div>
      <% end %>

      <div class="field">
        <%= f.submit '更新' %>
      </div>
      <%= link_to "詳細画面", service_path(params[:id]), class: "mnsk-link"%>
      <%= link_to "トップ", root_path, class: "mnsk-link"%>
    <% end %>
  </div>
</div>