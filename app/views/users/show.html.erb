<div class="container main-wrapper">
  <div class="user content">
    <div class="user-info">
      <h2>ユーザー情報</h2>
      <table>
        <tr>
          <td>お名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>生年月日</td>
          <td><%= @user.birthday %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <%= link_to "ユーザー情報を編集する", edit_user_path, class: "link" %>
    </div>
    <div class="card-info">
      <h3>カード情報</h3>
      <% if @card.present? %>
        <table>
          <tr>
            <td>カード番号</td>
            <td><%= "**** **** **** " + @card[:last4] %></td>
          </tr>
          <tr>
            <td>有効期限</td>
            <td><%= @card[:exp_month] %> / <%= @card[:exp_year] %></td>
          </tr>
        </table>
      <% else %>
        <p>まだカードを登録していません。</p>
        <%= link_to "クレジットカードを登録する", new_card_path, class: "link" %>
      <% end %>
    </div>
  </div>
</div>