<div class="container main-wrapper">
  <div class="user content">
    <div class="user-info">
      <h2>ユーザー情報</h2>
      <p>Name: <%= @user.name %></p>
      <p>Age: <%= @user.birthday %></p>
      <p>Email: <%= @user.email %></p>
      <%= link_to "ユーザー情報を編集する", edit_user_path, class: "link" %>
    </div>
    <div class="card-info">
      <h3>カード情報</h3>
      <% if @card.present? %>
        <p>card number</p>
        <p><%= "**** **** **** " + @card[:last4] %></p>
        <p>limit</p>
        <p><%= @card[:exp_month] %> / <%= @card[:exp_year] %></p>
      <% else %>
        <p>まだカードを登録していません。</p>
        <%= link_to "クレジットカードを登録する", new_card_path, class: "link" %>
      <% end %>
    </div>
  </div>
</div>